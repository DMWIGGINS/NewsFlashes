<body>

    <!-- Modal -->
    <div class="modal fade" id="seeNotesBtn" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <h5 class="modal-title" id="exampleModalLabel">{{this.title}}</h5>
                    <p>Newsflash ID: {{this.id}}</p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- end modal --}}

    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/savednews">Saved Articles</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02"
            aria-expanded="false" aria-label="Toggle navigation" style="">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/newsflashes">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/savednews">Saved Articles</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="main">
        <div id="headings">
            <p3>Saved Articles</p3>
            <br>
            <p1>USA Today</p1>
            <br>
            <p2>World News</p2>
        </div>
        <p4>Photo by charlotte on Unsplash</p4>

    </div>
    <br>
    <div id="savedNews">
        {{#each newsFlash}} {{#if saved}}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="titlesize">
                        <h4>
                            <a href="{{this.link}}">{{this.title}}</a>
                        </h4>
                    </th>
                    <th>
                        <button class="btn btn-danger" id="deleteNewsBtn" data-id="{{id}}">Delete from Saved</button>

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-warning" id="seeNotesBtn" data-toggle="seeNotesBtn" data-target="#notesModel" data-id="{{id}}">Article Notes</button>


                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-success">
                    <th scope="row">{{this.summary}}</th>
                    <th></th>
                </tr>
            </tbody>
        </table>
        {{/if}} {{/each}}
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">NewsFlashes scraped from USA Today</a>
    </nav>

</body>

</html>